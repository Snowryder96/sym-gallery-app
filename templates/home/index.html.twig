{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
  <img src="{{ asset('images/stain-blue-1.svg') }}" class="blue-stain d-none d-sm-block" alt="blue-paint-stain">
  <img src="{{ asset('images/stain-turquoise-2.svg') }}" class="position-absolute  d-none d-sm-block"  alt="orange-paint-stain">
  <img src="{{ asset('images/mobile/stain-turquoise-2.svg') }}" class="position-absolute base d-block d-sm-none"  alt="orange-paint-stain">
  <img src="{{ asset('images/stain-orange-2.svg') }}" class="position-absolute d-none d-sm-block" alt="orange-paint-stain">
<nav class="navmenu mr-2 d-none d-sm-block">
  <ul>
    <li><a href="#first-section" class="first-section font-0" alt="first-section">-</a></li>
    <li><a href="#second-section" class="second-section font-0" alt="second-section">-</a></li>
    <li><a href="#third-section" class="third-section font-0" alt="third-section">-</a></li>
    <li><a href="#fourth-section" class="fourth-section font-0" alt="fourth-section">-</a></li>
    <li><a href="#fivth-section" class="fivth-section font-0" alt="fivth-section">-</a></li>
  </ul>
</nav>

<section class="section d-flex flex-row-reverse p-5 my-0 mx-auto behind" id="first-section">
  <div class="text-center mx-auto my-auto home-profile text-primary " data-aos="zoom-out-down">
  <img src="{{ asset('images/profile-concept.svg') }}" class="home-logo" data-aos="zoom-out-down-center" data-aos-duration="1000" alt="">
    <h1 class="first-section-title mb-4" data-aos="fade-right" data-aos-duration="1000">Patricia Masuy</h1>
    <blockquote class="blockquote text-center text-primary" data-aos="fade-left" data-aos-duration="1000">
      <p class="mb-0"><i class="fas fa-quote-left"></i>&nbsp;L'art n'est pas une compétition, c'est une émotion&nbsp;<i class="fas fa-quote-right"></i></p>
      <footer class="blockquote-footer text-right"><cite title="Source Title">Patricia Masuy</cite></footer>
    </blockquote>
  </div>
  {# <img src="{{ asset('images/artist-illustration.svg') }}" class=" illustration" alt="illustration"> #}
</section>
<section class="d-flex section w-100 section-second text-white px-3 align-items-center row " id="second-section">
  <img src="{{ asset('images/mobile/stain-orange-2.svg') }}" class="position-absolute d-block d-sm-none"  alt="orange-paint-stain">
  <div class="col-md-6 col-xs-12 gap-bottom text-right pr-4" data-aos="fade-right" data-aos-duration="1000" >
      <h1 class="second-section-title " >Peinture personnalisées !</h1>
      <p class="h4" data-aos="fade-right" data-aos-duration="1200">Je peux vous peindre un portrait, un paysage...</p>
    </div>
    <div class="col-md-6 col-xs-12 mt-5 ">
      <div class="composition" >
            <img src="{{ asset('images/composition/img1.JPG') }}" data-aos="zoom-in" data-aos-duration="1200" alt="peinture 1" class="composition__photo composition__photo--p1">
            <img src="{{ asset('images/composition/img2.jpg') }}" data-aos="zoom-in" data-aos-duration="1000" alt="peinture 2" class="composition__photo composition__photo--p2">
            <img src="{{ asset('images/composition/img3.jpg') }}" data-aos="zoom-in" data-aos-duration="800" alt="peinture 3" class="composition__photo composition__photo--p3">                   
        </div>  
    </div>
    
</section>
<section class="d-flex section w-100 section-third align-items-center row " id="third-section">
  <div class="col-md-6 col-xs-12 p-0">
      <img src="{{ asset('images/summergirl.jpg') }}" class="img-fluid" alt="illustration - dessin">
    </div>
  <div class="col-md-6 col-xs-12 text-orangered px-3" data-aos="fade-right" data-aos-duration="1000">
      <h1 class="second-section-title" >Illustrations personnalisées !</h1>
      <h2 class="text-primary mb-3" data-aos="fade-right" data-aos-duration="1200">Je réalise vos illustrations au crayon ou en couleur.</h2>
      <div class="text-primary p-4">
        <p><i class="far fa-dot-circle"></i>&nbsp;&nbsp;Feutre</p>
        <p><i class="far fa-dot-circle"></i>&nbsp;&nbsp;Peinture</p>
        <p><i class="far fa-dot-circle"></i>&nbsp;&nbsp;Pastel</p>
      </div>
    </div>
    
</section>
<section class="d-flex section w-100 text-white section-forth align-items-center row " id="fourth-section">
  <div class="col-md-6 col-xs-12 text-right pr-5 front" >
      <h1 id="titleSwap" class="text-warning title second-section-title">Huile</h1>
      <h1 class="title second-section-title text-warning">personnalisées</h1>
      <p class="h4 " data-aos="fade-right" data-aos-duration="1200">Je peux vous peindre un portrait, un paysage, un animal...</p>
    </div>
  <div class="col-md-6 col-xs-12" >
    <img src="{{ asset('images/renard.jpg') }}" class="img-fluid renard" alt="Renard - huile">
  </div>
  <img src="{{ asset('images/stain-orange-3.svg') }}" class="position-absolute d-none d-sm-block"  alt="blue-paint-stain">

</section>
<section class="d-flex section w-100 section-fivth text-white align-items-center row p-0" id="fivth-section">
  <img src="{{ asset('images/mobile/stain-orange-4.svg') }}" class="position-absolute d-none d-sm-block"  alt="blue-paint-stain">
  <img src="{{ asset('images/stain-blue-1.svg') }}" class="position-absolute d-none d-sm-block" alt="blue-paint-stain">
  <div class="col p-0">
    <h1 class="display-4 p-5 latest-title shadow-lg">Dernières peintures...</h1>
  </div>
  <div class="d-flex flex-row align-items-center justify-content-around row p-0">
    {% for painting in lastPaintings %}
    <div class="col-md-4 col-xs-12">
      {% set url = path('painting_show', {'slug': painting.slug }) %}
      <a href="{{url}}" alt="{{painting.paintingFilename}}">
        <img src="{{ asset('uploads/paintings/' ~ painting.paintingFilename )}}" data-aos="fade-right" data-aos-duration="1300" class="w-100 mb-2 shadow-lg" alt="{{painting.paintingFilename}}">
      </a>
    </div>
    {% endfor %}
  </div>
  <div class="front p-4 my-4 mx-auto">
      <a href="{{ path('painting_index') }}" class="h2 btn-xlg custom-btn font-weight-bold my-3 px-3 py-2 text-decoration-none">Voir la galerie</a>
  </div>
</section>
{% endblock %}
{% block javascripts %}
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    var i = 0;
    function change() {
      var styles = ["Aquarelle", "Acrylique", "Huile"];
      $("#titleSwap").html(`<span data-aos="fade-in" data-aos-duration="1300" >${styles[i]}</span>`);
      i = (i + 1) % styles.length;
    }
    setInterval(change, 3000);

    AOS.init();

    const allItems = document.querySelectorAll(".navmenu ul li a")

    var content = $(".section");
    $(window).on("scroll", function(e) {
        var el = content.filter(function(i, el) {
          console.log($(el).css("height"))
          return el.getBoundingClientRect().bottom >= parseInt($(el).css("height"));
        })
        , sectionId = el.is(content) 
                      ? el.attr("id") 
                      : content.eq(1).attr("id");
        sectionLink = $("."+sectionId);
        allItems.forEach(item => {
        for(var i = 0; i < allItems.length; i++){
          if(el.length == 0){
            return ;
          }else{
            allItems[i].classList.remove("activee");
            sectionLink.addClass("activee");
          }}
        })
    }).scroll();
  </script>
{% endblock %}


