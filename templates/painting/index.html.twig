{% extends 'base.html.twig' %}

{% block title %}Nos magnifiques annonces{% endblock %}

{% block body %}
<section class="page">
    <h1 class="my-4 text-center text-primary">Gallery</h1>
    <div class="row">
        <div class="col-md-2  filters">
            <div class="button-group filter-button-group my-4 " data-filter-group="availability" id="availability">
                <button data-filter="*" class="btn custom-btn mb-1 active ">Toutes</button>
                <button data-filter=".1" class="btn custom-btn mb-1">Disponible</button>
                <button data-filter=".0" class="btn custom-btn mb-1">Non disponible</button>
            </div>        
            <div class="button-group filter-button-group my-4 " data-filter-group="category" id="category">
                <h3 class="text-primary my-3">Categorie</h3>
                <hr>
                <button data-filter="*" class="btn custom-btn mb-1 active">Toutes</button>
                {% for category in categories %}
                <button data-filter=".{{category.name}}" class="btn custom-btn mb-1 d-block">{{category.name}}</button>
                {% endfor %} 
            </div>
            <div class="button-group filter-button-group my-4 " data-filter-group="technic" id="technic">
                <h3 class="text-primary my-3">Technique</h3>
                <hr>
                <button data-filter="*" class="btn custom-btn mb-1 active ">Toutes</button>
                {% for technic in technics %}
                <button data-filter=".{{technic.name}}" class="btn custom-btn mb-1 d-block">{{technic.name}}</button>
                {% endfor %} 
            </div>
            
        </div>
    <div class="col">
        <div class="grid pl-5">
            {% for painting in paintings %}
                {% set url = path('painting_show', {'slug': painting.slug }) %}
                    <a href="{{url}}">
                        <div class="grid-item 
                        {% if painting.category %}
                            {{painting.category.name}} 
                        {% endif %}
                        {% if painting.technic %}
                            {{painting.technic.name}} 
                        {% endif %}
                        {% if painting.availability %}1
                        {% else %}0
                        {% endif %}" 
                        style="background-image: url('./uploads/paintings/{{painting.paintingFilename}}') "></div>
                        {# <img src="{{asset('uploads/paintings/' ~ painting.paintingFilename )}}" class="grid-item {{painting.category.name}} {{painting.technic.name}} {% if painting.availability %}1{% else %}0{% endif %}" alt=""> #}
                    </a>
                {# {% include 'painting/_painting.html.twig'%} #}
            {% endfor %}
            
        </div>    
    </div>
    
    
        

</div>
</section>
    
{% endblock %}

{% block javascripts %}


<script src="{{ asset('js/isotope.pkgd.min.js')}}"></script>
<script src="{{ asset('js/isotope.js')}}"></script>
{% endblock %}