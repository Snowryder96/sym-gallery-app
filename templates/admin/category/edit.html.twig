{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une categorie{% endblock %}

{% block body %}
<section class="page p-3">
  <div class="container d-flex align-items-center">
    <div class="justify-content-center">
      {{ form_start(form) }}
      {{ form_widget(form) }}
      <button type="submit" class="btn btn-primary my-4">Modifier</button>
      {{ form_end(form) }}
    </div>
  </div>
</section>

{% endblock %}
{% block javascripts %}
<script>
  window.onload = function() {
  $("label").addClass(`h2 text-primary my-4`)
  $("label").html(`Modification de la category: <strong>{{category.name}}</strong>`)
};
</script>
{% endblock %}